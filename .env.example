# Database Configuration
POSTGRES_USER=raguser
POSTGRES_PASSWORD=ragpassword
POSTGRES_DB=ragdb
DATABASE_URL=postgresql://raguser:ragpassword@postgres:5432/ragdb

# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# LLM Model Selection
# Options:
#   - x-ai/grok-beta (xAI Grok - Fast coding model)
#   - google/gemini-flash-1.5-8b (Google Gemini Flash - Fast and efficient)
LLM_MODEL=google/gemini-flash-1.5-8b

# Application Settings
MAX_UPLOAD_SIZE=10485760
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5
